{
    "name": "Charitable",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Do good by doing what you already do. This extension ensures that at least 5% of your Amazon purchases go to either the RNLI or Macmillan :)",
    "homepage_url": "https://gdgr.co.uk/charitable",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": [
            "src/bg/background.js"
        ],
        "persistent": true
    },
    "options_page": "src/options/index.html",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [{
        "matches": [
            "https://amazon.co.uk/*"
        ],
        "js": [
            "src/inject/inject.js"
        ]
    }]
}
